= form_with url: search_path,
                 method: :get,
                 local: true do |f|

  = f.label :query
  = f.text_area :query

  = f.select(:scope,
               [['All', 'thinking_sphinx'],
                ['Question', 'question'],
                ['Answer', 'answer'],
                ['Comment', 'comment'],
                ['User', 'user']])

  = f.submit 'Search'
